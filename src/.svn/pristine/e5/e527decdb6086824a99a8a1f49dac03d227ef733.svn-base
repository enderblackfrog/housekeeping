@import 'base';
.my-order {
    width: 100%;
    height: auto;
    padding-bottom: 10px;
    .my-order-title {
        height: 40px;
        width: 96%;
        font-size: @housekeeping_font_size5;
        font-weight: 700;
        color: @housekeeping_font_color1;
        line-height: 40px;
        background: #ffffff;
        padding: 0 2%;
        border-bottom: 1px solid @housekeeping_body_color;
    }
    .my-order-icons {
        width: 100%;
        height: 76px;
        background: #ffffff;
        text-align: center;
        font-size: @housekeeping_font_size3;
        div {
            width: 25%;
            height: 61px;
            float: left;
            margin-top: 15px;
            color: @housekeeping_font_color3;
            box-sizing: border-box;
            img {
                height: 30px;
            }
        }
    }
}

.my-order-body {
    width: 96%;
    height: auto;
    padding: 0 2%;
    background: #ffffff;
    margin-bottom: 60px;
    .order {
        height: 160px;
        width: 100%;
        .order-title {
            width: 100%;
            height: 40px;
            font-size: @housekeeping_font_size3;
            line-height: 40px;
            border-bottom: 1px solid @housekeeping_body_color;
            .order-number {
                width: 50%;
                float: left;
                box-sizing: border-box;
            }
            .order-time {
                width: 50%;
                float: left;
                text-align: right;
            }
        }
        .order-body-left {
            height: 120px;
            width: 35%;
            padding:10px 0;
            float:left;
            line-height: 120px;
            box-sizing: border-box;
            border-bottom: 1px solid @housekeeping_body_color;
        }
        .order-body-right{
            height: 120px;
            width: 65%;
            padding:10px 0;
            float:left;
            box-sizing: border-box;
            border-bottom: 1px solid @housekeeping_body_color;
            h3{
                 height: 40;
                color:@housekeeping_font_color1;
            }
            p {
                height: 40px;
                font-size: @housekeeping_font_size3;
                color:@housekeeping_font_color2;
                line-height: 20px;
            }
            div{
                width:60%;
                height: 40px;
                color:red;
                font-size: @housekeeping_font_size5;
                line-height: 40px;
                float: left;
                + div{
                    color:@housekeeping_font_color2;
                    width:40%;
                    height: 40px;
                    line-height: 40px;
                    text-align: right;
                    font-size: @housekeeping_font_size4;
                }
            }
        }
    }
}

.order-active {
    box-sizing: border-box;
    border-bottom: 5px solid @housekeeping_theme_color;
}